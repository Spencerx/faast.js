{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "Node16",
        "target": "ES2020",
        "lib": ["es2020"],
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "declarationDir": "dist/decls",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noUnusedParameters": true,
        "strict": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist", "etc", "temp", "examples", "test-release"]
}
