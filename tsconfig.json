{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "esnext.asynciterable"],
        // "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "declarationDir": "dist/decls",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noUnusedParameters": true,
        "strict": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "etc", "temp", "examples", "test-release"]
}
